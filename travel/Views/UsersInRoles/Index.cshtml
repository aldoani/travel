@model IEnumerable<travel.ViewModels.ListUsersInRolesViewModel>

@{
    ViewBag.Title = "UserInRoles";
}
<head>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<h2 class="marg_top">UserInRoles</h2>
<table class="table table-bordered table-hover table-responsive d-sm-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().UserId)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
        </tr>
    }
</table>


